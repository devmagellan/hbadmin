{% extends "@HBAdmin/layout.html.twig" %}

{% block breadcrumbs %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('hb.courses.list') }}">Продукты</a>
        </li>
        <li class="breadcrumb-item active">
            <a href="{{ path('hb.course.edit', {id: offer.funnel.course.id}) }}">{{ offer.funnel.course.info.title }}</a>
        </li>
        <li class="breadcrumb-item">Воронки</li>
        <li class="breadcrumb-item">
            <a href="{{ path('hb.sale_funnel.one_time_offer.edit', {id: offer.funnel.id}) }}">
                Единоразовое предложение
            </a>
        </li>
        <li class="breadcrumb-item"><b>Редактирование</b></li>
    </ol>
{% endblock %}

{% block body %}

    <div class="card">
        <div class="card-header">
            Редактирование предложения

        </div>
        <div class="card-body">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-success">Сохранить</button>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}