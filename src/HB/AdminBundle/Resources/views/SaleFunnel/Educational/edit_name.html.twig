{% extends "@HBAdmin/layout.html.twig" %}

{% block breadcrumbs %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('hb.courses.list') }}">Продукты</a>
        </li>
        <li class="breadcrumb-item active">
            <a href="{{ path('hb.course.edit', {id: funnel.course.id}) }}">{{ funnel.course.info.title }}</a>
        </li>
        <li class="breadcrumb-item">Воронки</li>
        <li class="breadcrumb-item"><a href="{{ path('hb.sale_funnel.educational.edit', {id: funnel.id}) }}">
                Образовательная</a></li>
        <li class="breadcrumb-item">Редактирование письма</li>
    </ol>
{% endblock %}

{% block body %}

    <div class="card">
        <div class="card-header">
            Редактирование письма
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">

                    <form name="add_letter" method="post"
                          action="{{ path('hb.sale_funnel.educational.edit.letter', {funnel: funnel.id, letter: letter.id}) }}">
                        <br>
                        {{ form_widget(form) }}

                        <button type="submit" class="btn btn-sm btn-success">Сохранить</button>

                    </form>

                </div>
            </div>
        </div>
    </div>

{% endblock %}